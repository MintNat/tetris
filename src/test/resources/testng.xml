<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="TestNG Group Test">
    <test verbose="2" name="Tetris tests">
        <groups>
            <define name="all">
                <include name="blockShapes"/>
                <include name="blocks"/>
                <include name="jar"/>
                <include name="functionsTests"/>
                <include name="playfieldClassTests"/>
            </define>
            <run>
                <include name="blockShapes"/>
                <include name="blocks"/>
                <include name="functionsTests"/>
                <include name="playfieldClassTests"/>
                <include name="jar"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.tetris.block.OBlockTest"/>
            <class name="com.epam.prejap.tetris.block.TBlockTest"/>
            <class name="com.epam.prejap.tetris.JARArchiveIT"/>
            <class name="com.epam.prejap.tetris.game.PlayfieldTest"/>
        </classes>
    </test>
</suite>
